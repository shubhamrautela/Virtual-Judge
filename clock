#include<stdio.h>
#include<conio.h>
#include<graphics.h>
#include<math.h>
#include<dos.h>
#include<time.h>
int x=0,y=0,theta=0,radius=50,center=300,hour_inc=0;
int x_minute=0,y_minute=0,x_hour=0,y_hour=0,theta_minute=0,theta_hour=0;


void hour_hand(){
   x_hour=ceil(cos((M_PI/180)*(90-theta_hour))*radius);
  y_hour=ceil(sin((M_PI/180)*(90-theta_hour))*radius);
  line(center,center,center+x_hour,center-y_hour+5);
  //if(theta%360==0)theta_minute-=6;

}
void minute_hand(){
  if(theta_minute%72==0){
  if(hour_inc==0){
  theta_hour+=6;
  hour_inc=1;
  }
  else {
  hour_inc=1;
  }
  }
  x_minute=ceil(cos((M_PI/180)*(90-theta_minute))*radius);
  y_minute=ceil(sin((M_PI/180)*(90-theta_minute))*radius);
  line(center,center,center+x_minute,center-y_minute+9);
  if(theta%360==0)theta_minute+=6;
}
void second_hand(){


while(1){
if(kbhit())exit(0);

minute_hand();
hour_hand();
y=ceil(sin((M_PI/180)*(90-theta)
)*radius);
x=ceil(cos((M_PI/180)*(90-theta))*radius);
line(center,center,center+x,center-y);
circle(center,center,60);
delay(1000);
clearviewport();
theta+=6;

}
}
void main()
{
int a=DETECT,b,c,hour=0,min=0,sec=0;
time_t rawtime;
    struct tm * timeinfo;

    time ( &rawtime );
    timeinfo = localtime ( &rawtime );

printf("%d %d %d",timeinfo->tm_hour, timeinfo->tm_min, timeinfo->tm_sec);
hour=timeinfo->tm_hour;
min=timeinfo->tm_min;
sec=timeinfo->tm_sec;


theta_hour=(hour%12)*30+(min/12)*6;
theta_minute=min*6;
theta=sec*6;

//double x=-1360,y=0.0;
initgraph(&a,&b,"");

second_hand();


getch();
}
